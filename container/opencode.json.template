{
  "$schema": "https://opencode.ai/config.schema.json",
  "server": {
    "port": 4096,
    "host": "localhost"
  },
  "dataDir": "/home/node/.claude",
  "plugin": [
    "/app/.opencode/plugins/transcript-archiver.js"
  ],
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow",
    "doom_loop": "allow",
    "external_directory": "allow"
  },
  "tools": {
    "bash": true,
    "read": true,
    "write": true,
    "edit": true,
    "glob": true,
    "grep": true,
    "websearch": true,
    "webfetch": true,
    "task": true,
    "todo": true,
    "skill": true,
    "notebook": true,
    "nanoclaw_*": true
  },
  "mcp": {
    "allowAll": false,
    "servers": {
      "nanoclaw": {
        "type": "local",
        "command": ["node", "/tmp/dist/ipc-mcp-stdio.js"],
        "environment": {
          "NANOCLAW_CHAT_JID": "${NANOCLAW_CHAT_JID}",
          "NANOCLAW_GROUP_FOLDER": "${NANOCLAW_GROUP_FOLDER}",
          "NANOCLAW_IS_MAIN": "${NANOCLAW_IS_MAIN}"
        },
        "timeout": 30000
      }
    }
  },
  "agent": {
    "nanoclaw": {
      "prompt": "/app/opencode-agents/nanoclaw.md"
    }
  },
  "default": {
    "agent": "nanoclaw"
  },
  "share": "disabled",
  "autoupdate": false,
  "logLevel": "INFO"
}
